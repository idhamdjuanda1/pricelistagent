rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Limit access to user's own tenant if you have multi-tenancy
    // For now, allow any signed-in user to read/write invoices and receipts they created.

    match /invoices/{invoiceId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.createdBy;
    }

    match /receipts/{receiptId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.createdBy;
    }

    match /deals/{dealId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    // Fallback deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}